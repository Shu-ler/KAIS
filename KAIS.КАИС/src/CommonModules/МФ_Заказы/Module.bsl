	Заказ.Заполнить(ПараметрыЗаказа);
	Заказ.Дата = ДатаДокумента;
	Заказ.Комментарий = НСтр("ru='Сгенерирован автоматически (Филимонов И.В., +7 913 240 81 77)'");
	Заказ.СкладПолучатель = СтрокиТЧТовары[0].Склад;
	
	Для Каждого СтрокаТЧ Из СтрокиТЧТовары Цикл
		
		СтрокаТЧТовары = Заказ.Товары.Добавить();
		СтрокаТЧТовары.Количество = СтрокаТЧ.Потребность;
		СтрокаТЧТовары.КоличествоУпаковок = СтрокаТЧ.Потребность;
		СтрокаТЧТовары.Назначение = СтрокаТЧ.Назначение;
//		СтрокаТЧТовары.Обособленно = Истина;
		СтрокаТЧТовары.Номенклатура = СтрокаТЧ.Номенклатура;
		СтрокаТЧТовары.ВариантОбеспечения = Перечисления.ВариантыОбеспечения.Отгрузить;
		СтрокаТЧТовары.НачалоОтгрузки = ДатаДокумента; 
				
	КонецЦикла;
	
	// Сохранение заказа
	Попытка
		Заказ.Записать(РежимЗаписиДокумента.Запись);
	Исключение
		Нечто = ОписаниеОшибки();
	КонецПопытки;
		
