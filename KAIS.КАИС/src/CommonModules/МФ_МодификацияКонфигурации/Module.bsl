// см. МодификацияКонфигурацииПереопределяемый.ПриСозданииНаСервере 
Процедура КонтрагентыФормаЭлементаПриСозданииНаСервере(Форма, Отказ, СтандартнаяОбработка) Экспорт

	Элементы = Форма.Элементы;
	
	СтраницаОсновное = Элементы.Найти("СтраницаОсновное");
	ГруппаПеред = Элементы.Найти("ГруппаПартнерНаименование");
	
	НовыйЭлемент = Элементы.Вставить("МФ_КодКАИС", Тип("ПолеФормы"), СтраницаОсновное, ГруппаПеред);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.Заголовок = "Код КАИС";
	НовыйЭлемент.ПодсказкаВвода = "А0007";
	НовыйЭлемент.ПодсказкаВвода = "Код клиента на сайте КАИС";
	НовыйЭлемент.ПутьКДанным = "Объект.МФ_КодКАИС";

КонецПроцедуры

// см. МодификацияКонфигурацииПереопределяемый.ПриСозданииНаСервере 
Процедура ОрганизацииФормаЭлементаПриСозданииНаСервере(Форма, Отказ, СтандартнаяОбработка) Экспорт

	Элементы = Форма.Элементы;
	
	СтраницаОсновныеКоды = Элементы.Найти("ГруппаВидСтатусОрганизации");
//	ГруппаПеред = Элементы.Найти("ГруппаПартнерНаименование");
	
	НовыйЭлемент = Элементы.Вставить("МФ_КодКАИС", Тип("ПолеФормы"), СтраницаОсновныеКоды);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.Заголовок = "Код КАИС";
	НовыйЭлемент.ПодсказкаВвода = "А0007";
	НовыйЭлемент.ПодсказкаВвода = "Код организации на сайте КАИС";
	НовыйЭлемент.ПутьКДанным = "Объект.МФ_КодКАИС";

КонецПроцедуры

